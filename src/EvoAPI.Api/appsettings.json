{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YourSecretKeyHereMustBe32CharactersLong!",
    "Issuer": "EvoAPI",
    "Audience": "EvoClient",
    "ExpiryInMinutes": 60
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:evotest.database.windows.net,1433;Initial Catalog=EVO;User ID=EvoUser;Password={DB_PASSWORD};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "GoogleMaps": {
    "ApiKey": "your-google-maps-api-key-here"
  },
  "Fleetmatics": {
    "BaseUrl": "${FLEETMATICS_BASE_URL}",
    "Username": "${FLEETMATICS_USERNAME}",
    "Password": "${FLEETMATICS_PASSWORD}",
    "SyncHour": 2
  },
  "EvoWS": {
    "BaseUrl": "https://localhost:44307"
  },
  "TimeTracking": {
    "SyncIntervalMinutes": 15
  }
}
